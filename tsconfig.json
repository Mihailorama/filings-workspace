{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "formatCodeOptions": {
    "indentSize": 2
  }
}
